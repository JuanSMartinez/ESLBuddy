<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="com.eslbuddy.juanmartinez.eslbuddy.RecordedTextActivity"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="@dimen/inner_frame_layout_padding"
        app:boxedEdges="all">

        <ImageButton
            android:id="@+id/okButton"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/complicationDrawable_backgroundColor"
            android:scaleType="fitCenter"
            android:src="@drawable/ok_button" />

        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/complicationDrawable_backgroundColor"
            android:scaleType="fitCenter"
            android:src="@drawable/cancel_button" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/recordedTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="18sp" />

        </ScrollView>

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrollView2">

            <TextView
                android:id="@+id/translatedTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:textSize="18sp" />

        </ScrollView>


    </RelativeLayout>
</android.support.wear.widget.BoxInsetLayout>

